doctype html
html
  head
    meta(charset='utf-8')
    title
    meta(name='viewport', content='initial-scale=1,maximum-scale=1,user-scalable=no')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/scrolling-nav.css', rel='stylesheet')
    link(href='css/timeline.css', rel='stylesheet')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js")
    link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.css")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.js")
    
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,600', rel='stylesheet', type='text/css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://d3js.org/d3.v3.min.js')
    script(src='https://d3js.org/topojson.v1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js')
    script(src='http://labratrevenge.com/d3-tip/javascripts/d3.tip.v0.6.3.js')
    script(src='//code.jquery.com/jquery-1.11.0.min.js')
    script(src='//code.jquery.com/jquery-migrate-1.2.1.min.js')
    script(src='/js/wordcloud2.js')
    style.
      iframe {
        top:150px;
        width: 100%;
        height: 700px;
        overflow:hidden;

      }
      #canvas_cloud{
        position: absolute;
        top:1700px;

      }
  body
    
    script(type='text/javascript').
      var name = "!{trend}"
      var date = "!{date}"
    nav#mainNav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='/') Emoji Mapper
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#mapdisplay') Map
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#agg') Aggregate Report
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#cloud') Emoji Cloud
                      
    
    iframe(src='/display/map?trend='+trend+'&date='+date scrolling="no")#mapdisplay
    
    section#agg(style="background:#33adff")
      .container.text-center
        .h2 Aggregate Report
      br
      br
      .container
        .row.text-center
          .col-lg-6.mx.auto
            #pie
          .col-lg-6.mx-auto
            #e_pie

    section#cloud
      .container.text-center
        .h2 Cloud
      br
      br
      .container
        #wordcloudDiv
          canvas#canvas_cloud(style="height:300px;width:70%")
    
    
    script(src='/js/emojicloud.js' id="wordcloudDiv1" trend=trend date =date)
    
    script(src='/js/pie.js' id="piediv" trend=trend date =date)
    script(src='/js/e_pie.js' id="e_piediv" trend=trend date =date)
